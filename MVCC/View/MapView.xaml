                        <Line X1="600" Y1="0" X2="600" Y2="360" Stroke="Gray" />
                        <ItemsControl
                        ItemTemplateSelector="{StaticResource MyDataTemplateSeletor}"
                        ItemsSource="{Binding Source={StaticResource MVCCItemSrc}}" Margin="-10,0,10,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas MouseLeftButtonDown="SelectUGV" MouseRightButtonDown="MoveUGV" Background="Transparent" Margin="1,0,-1,0">
                                    </Canvas>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid Margin="5, 0, 0, 0">
                <TabControl Background="#2D2D30" BorderThickness="0">
                    <TabItem Style="{StaticResource MapStateTabSectionStyle}" >
                        <TabItem.Header>
                            <TextBlock Cursor="Hand">                                        
                        Individual
                            </TextBlock>
                        </TabItem.Header>
                        <Grid>
                            <Border BorderThickness="0, 1, 0, 0" Margin="1, -3, 1, 0" BorderBrush="#78C8FF" />

                            <ItemsControl
                                ItemTemplateSelector="{StaticResource MyDataTemplateSeletor}"
                                ItemsSource="{Binding Source={StaticResource UGVStateSrc}}" Margin="10"
                                >
                                <ItemsControl.Template>
                                    <ControlTemplate TargetType="{x:Type ItemsControl}">
                                        <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                                            <ItemsPresenter></ItemsPresenter>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel>
                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Grid>
                    </TabItem>
                    <TabItem Style="{StaticResource MapStateTabSectionStyle}">
                        <TabItem.Header>
                            <TextBlock Cursor="Hand">        
                                Group
                            </TextBlock>
                        </TabItem.Header>
                        <Grid>
                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="그룹 생성"></MenuItem>
                                    <Separator />
                                </ContextMenu>
                            </Grid.ContextMenu>
                            <Border BorderThickness="0, 1, 0, 0" Margin="1, -3, 1, 0" BorderBrush="#78C8FF" />
                            <ItemsControl
                                ItemTemplateSelector="{StaticResource MyDataTemplateSeletor}"
                                ItemsSource="{Binding Source={StaticResource UGVGroupSrc}}" Margin="10"
                                >
                                <ItemsControl.Template>
                                    <ControlTemplate TargetType="{x:Type ItemsControl}">
                                        <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                                            <ItemsPresenter></ItemsPresenter>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel>
                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
